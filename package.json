{
  "name": "aifred",
  "version": "1.0.0",
  "description": "AIfred - AI-powered multibot orchestrator with Router â†’ Planner â†’ Executor architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter @aifred/api --filter @aifred/web dev",
    "build": "pnpm --filter @aifred/api build && pnpm --filter @aifred/web build",
    "start": "pnpm --parallel --filter @aifred/api --filter @aifred/web start",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose up --build",
    "db:migrate": "pnpm --filter @aifred/api db:migrate",
    "db:generate": "pnpm --filter @aifred/api db:generate",
    "openapi:generate": "pnpm tsx scripts/ingest-openapi.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
